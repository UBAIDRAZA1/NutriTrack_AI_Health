rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: each user can only access their own document and subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow access to any nested documents/collections under the user's document
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}